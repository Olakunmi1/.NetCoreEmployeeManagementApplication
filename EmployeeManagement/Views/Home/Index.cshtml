@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employee List";
}

    <div class="card-deck">
        @foreach (var employee in Model)
        {
             var PhotoPath = "~/images/" + (employee.StringPath ?? "img1.jpg");
        <div class="card m-3" style="min-width: 18rem"; max-width: 30.5%; >
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="imageThumbnail" src="@PhotoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a  class="btn btn-primary m-1" asp-controller="Home" asp-action="Details" 
                   asp-route-id="@employee.Id" >View</a> 
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary m-1"> Edit</a>
                <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id" class="btn btn-danger m-1"> Delete</a>
            </div>

        </div>
        }
    </div>
      
    